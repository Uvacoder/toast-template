{
  "name": "toast-template",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "private": true,
  "author": "Tony Alves (@talves)",
  "license": "MIT",
  "scripts": {
    "postinstall": "breadbox --dest public/web_modules",
    "build": "npm run build:css && npm run build:site",
    "build:css": "postcss --config legacy-commonjs index.css -o public/styles.css",
    "build:site": "toast incremental ."
  },
  "dependencies": {
    "@sector/breadbox": "^0.0.4",
    "@toastdotdev/mdx": "^0.1.5",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.0.2",
    "toast": "^0.3.41"
  },
  "snowpack": {
    "exclude": [
      "public/**/*",
      "toast.js"
    ],
    "installOptions": {
      "alias": {
        "react": "preact/compat"
      }
    },
    "knownEntrypoints": [
      "preact/hooks",
      "preact"
    ]
  }
}